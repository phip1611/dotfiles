# Common Plugins for "oh my zsh"
common_zsh_plugins=(
  git
  yarn
  npm
  ng
  colored-man-pages 
  httpie
  mvn
  urltools
  colorize

  # rustc, cargo, rustup
  rust
  
  ripgrep

  docker
  docker-compose

  # those are not plugins supported by zsh per default but 
  # external plugins. They get initialized by a dedicated shell
  # script. Behind the scenes, these are just git repositories 
  # cloned into the "oh my zsh" custom plugins folder
  zsh-autosuggestions
  zsh-syntax-highlighting
  nix-shell
  nix-zsh-completions
)
